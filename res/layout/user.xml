<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01" android:layout_height="wrap_content"
	android:layout_width="wrap_content">
	
	<LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:padding="5px"><ImageView android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:id="@+id/imageviewUserImage" android:layout_height="wrap_content" android:maxWidth="32dip" android:maxHeight="32dip"></ImageView></LinearLayout><LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content" android:text="@+id/TextView01" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:padding="5px" android:id="@+id/textviewUserName" style="@style/UserName"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="fill_parent">
			<TextView android:layout_width="wrap_content" android:text="@+id/TextView02" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:padding="3px" android:id="@+id/textviewUserReputation" android:textStyle="bold"></TextView>
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:padding="3px" android:id="@+id/layoutUserGoldBadges" android:visibility="gone">
				<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/badge_gold" android:layout_gravity="center_vertical" android:paddingRight="3px"></ImageView>
				<TextView android:text="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:id="@+id/textviewUserGoldBadges"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:padding="3px" android:id="@+id/layoutUserSilverBadges" android:visibility="gone">
				<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/badge_silver" android:layout_gravity="center_vertical" android:paddingRight="3px"></ImageView>
				<TextView android:text="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:id="@+id/textviewUserSilverBadges"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:padding="3px" android:id="@+id/layoutUserBronzeBadges" android:visibility="gone">
				<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/badge_bronze" android:layout_gravity="center_vertical" android:paddingRight="3px"></ImageView>
				<TextView android:text="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:id="@+id/textviewUserBronzeBadges"></TextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
